<script>
    // Função para validar a senha
    function validarSenha(senha) {
        return senha.length >= 6;
    }

    const senhaInput = document.getElementById('newPassword');

    // Validação em tempo real da senha
    senhaInput.addEventListener('input', function() {
        if (this.value && !validarSenha(this.value)) {
            this.classList.add('is-invalid');
        } else {
            this.classList.remove('is-invalid');
        }
    });

    // Manipulador de envio de formulário de redefinição de senha
    $('#reset-password-form').on('submit', function(e) {
        e.preventDefault();
        
        const newPassword = $('#newPassword').val();
        const token = $('#token').val();

        // Validação final da senha
        if (!validarSenha(newPassword)) {
            Swal.fire({
                icon: 'error',
                title: 'Erro!',
                text: 'A senha deve conter no mínimo 6 caracteres.',
                confirmButtonText: 'OK'
            });
            return; // Interrompe o envio do formulário se a condição não for atendida
        }

        // Envio da senha ao servidor
        $.post('/reset-password', { newPassword, token }, function(response) {
            Swal.fire({
                icon: 'success',
                title: 'Sucesso!',
                text: 'Senha redefinida com sucesso!'
            }).then(() => {
                window.location.href = '/login';
            });
        }).fail(function(xhr) {
            Swal.fire({
                icon: 'error',
                title: 'Erro!',
                text: xhr.responseJSON.error || 'Erro ao redefinir a senha'
            });
        });
    });
      // Função para alternar visibilidade da senha
   function togglePasswordVisibility(inputId, iconId) {
        const passwordInput = document.getElementById(inputId);
        const eyeIcon = document.getElementById(iconId);

        if (passwordInput.type === "password") {
            passwordInput.type = "text";
            eyeIcon.classList.remove("bi-eye");
            eyeIcon.classList.add("bi-eye-slash");
        } else {
            passwordInput.type = "password";
            eyeIcon.classList.remove("bi-eye-slash");
            eyeIcon.classList.add("bi-eye");
        }
    }

    // Alternar entre painéis de login e signup
    document.getElementById("btn-signup").addEventListener("click", () => {
        document.getElementById("panel-login").classList.add("hidden");
        document.getElementById("panel-signup").classList.remove("hidden");
    });

    document.getElementById("btn-login").addEventListener("click", () => {
        document.getElementById("panel-signup").classList.add("hidden");
        document.getElementById("panel-login").classList.remove("hidden");
    });
</script>



