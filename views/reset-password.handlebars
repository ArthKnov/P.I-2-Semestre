<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Redefinir Senha</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center">Redefinir Senha</h2>
        <form id="reset-password-form">
            <div class="mb-3">
                <label for="newPassword" class="form-label">Nova Senha</label>
                <input type="password" class="form-control" id="newPassword" name="newPassword" required>
            </div>
            <input type="hidden" id="token" name="token" value="{{token}}"> <!-- Campo oculto para o token -->
            <button type="submit" class="btn btn-success">Redefinir Senha</button>
        </form>
    </div>

    <script>
        // Manipulador de envio de formulário de redefinição de senha
        $('#reset-password-form').on('submit', function(e) {
            e.preventDefault();
            const newPassword = $('#newPassword').val();
            const token = $('#token').val();
            
            $.post('/reset-password', { newPassword, token }, function(response) {
                alert('Senha redefinida com sucesso!');
                setTimeout(() => {
                    window.location.href = '/login'; // Redireciona para a tela de login após a redefinição
                }, 3000); // Redireciona após 3 segundos
            }).fail(function(xhr) {
                alert(xhr.responseText);
            });
        });
    </script>
</body>
</html>