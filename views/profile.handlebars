document.addEventListener('DOMContentLoaded', function () {
    const serviceDurations = {
    'Manicure Simples - R$ 25,00'    : 40,
    'Pedicure Simples - R$ 30,00'    : 45,
    'Pedicure Completa - R$ 55,00'   : 60,
    'Esmaltação em Gel - R$ 45,00'   : 45,
